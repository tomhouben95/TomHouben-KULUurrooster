@model SelectCoursesViewModel

@{
    ViewData["Title"] = "Selecteer vakken";
}

<h2>@ViewData["Title"]</h2>
<hr/>

@if(@Model.GeneratedLink != null){
<div class="alert alert-success">
  <strong>Link: </strong> <a href="@Model.GeneratedLink">@Model.GeneratedLink</a>
</div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Feed" asp-action="SelectCourses" method="post" class="form-horizontal" role="form">
            <h4>Cursussen</h4>
            <hr />
            
            @for (var i = 0; i < Model.Courses.Length; i++)
            {
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="@Model.SelectedCourses[i]"/>
							    <input type="hidden" asp-for="@Model.Courses[i]"/> 
                                @Model.Courses[i]
                            </label>
                        </div>
                    </div>
                </div>
            }
                
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Genereer link</button>
                </div>
            </div>
        </form>
    </div>
</div>